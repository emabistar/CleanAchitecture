{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }

  },
  "WriteTo": [

    { "Name": "Console" },

    {
      "Name": "File",
      "Args": {
        "path": "/logs/log-.text",
        "rollingInterval": "Day",
        "rollOnFileSizeLimit": true,
        "formater": "Serilog.Formatting.CompactJsonFormatter, Serilog.Formatting"
      }
    }
  ],
  "Enrich": ["FromLogContext","WithMachineName","WithThread" ],

  "AllowedHosts": "*"
} 
